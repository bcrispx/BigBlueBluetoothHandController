<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Big Blue"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#660000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlCircle"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toBottomOf="@id/btnConnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNorth"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:backgroundTint="#660000"
            android:enabled="false"
            android:text="N"
            android:textAllCaps="false"
            android:textSize="32sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSouth"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:backgroundTint="#660000"
            android:enabled="false"
            android:text="S"
            android:textAllCaps="false"
            android:textSize="32sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEast"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:backgroundTint="#660000"
            android:enabled="false"
            android:text="E"
            android:textAllCaps="false"
            android:textSize="32sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWest"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:backgroundTint="#660000"
            android:enabled="false"
            android:text="W"
            android:textAllCaps="false"
            android:textSize="32sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpiral"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#660000"
        android:enabled="false"
        android:gravity="center"
        android:padding="4dp"
        android:text="Spiral Search"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@id/controlCircle"
        app:layout_constraintEnd_toEndOf="@id/controlCircle"
        app:layout_constraintStart_toStartOf="@id/controlCircle"
        app:layout_constraintTop_toTopOf="@id/controlCircle" />

    <!-- Center point for reference -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpiralSpeed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#660000"
        android:enabled="false"
        android:gravity="center"
        android:text="Speed: 1x"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@id/btnSpiral"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/btnSpiral"
        app:layout_constraintTop_toBottomOf="@id/btnSpiral" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
